<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="listview.mytextview.com.allinone.TempControlAll"
    tools:showIn="@layout/activity_temp_control_all">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/TempControlAll"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Enter value here"
        android:id="@+id/editText"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/C"
        android:id="@+id/celciusButton"
        android:checked="false"
        android:layout_alignTop="@+id/kelvinButton"
        android:layout_toLeftOf="@+id/editText"
        android:layout_toStartOf="@+id/editText" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/F"
        android:id="@+id/fahrenheitButton"
        android:checked="false"
        android:layout_alignTop="@+id/celciusButton"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/K"
        android:id="@+id/kelvinButton"
        android:checked="false"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/editText"
        android:layout_toEndOf="@+id/editText"
        android:layout_marginTop="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/C"
        android:id="@+id/celcius"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/kelvin"
        android:layout_alignLeft="@+id/kelvin"
        android:layout_alignStart="@+id/kelvin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/F"
        android:id="@+id/fahrenheit"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/fahrenheitButton"
        android:layout_alignEnd="@+id/fahrenheitButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/K"
        android:id="@+id/kelvin"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/fahrenheit"
        android:layout_alignLeft="@+id/fahrenheit"
        android:layout_alignStart="@+id/fahrenheit" />
</RelativeLayout>
